  "author": "smnbbrv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SortableJS/angular-sortablejs/issues"
  },
  "homepage": "https://github.com/SortableJS/angular-sortablejs#readme",
  "devDependencies": {
    "sortablejs": "^1.5.1",
    "@angular/compiler": "4.0.1",
    "@angular/compiler-cli": "4.0.1",
    "@angular/core": "4.0.1",
    "@types/node": "7.0.12",
    "@types/systemjs": "0.20.2",
    "git-validate": "2.2.2",
    "rimraf": "2.6.1",
    "rxjs": "5.3.0",
    "tslint": "5.1.0",
    "typescript": "2.2.2"
  },
  "peerDependencies": {
    "sortablejs": ">=1.5.1",
    "@angular/core": ">=4.0.0",
    "lodash": ">=4.17.0"
