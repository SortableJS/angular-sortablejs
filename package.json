  "repository": {
    "type": "git",
    "url": "git+https://github.com/SortableJS/angular-sortablejs.git"
  },
  "keywords": [
    "angular2-sortable",
    "angular2-sortablejs",
    "angular-sortable",
    "angular-sortablejs",
    "ng2-sortable",
    "ng2-sortablejs",
    "ng-sortable",
    "ng-sortablejs"
