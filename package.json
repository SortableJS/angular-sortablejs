{
  "name": "angular-sortablejs",
  "version": "2.3.0",
  "description": "SortableJS for Angular",
  "main": "./dist/index.js",
  "typings": "./dist/index",
  "scripts": {
    "clean": "rimraf ./dist/* ./codegen/*",
